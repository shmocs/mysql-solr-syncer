# Local Development Environment
# Load this when running: npm run dev

# RabbitMQ (connect to Docker)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=rabbitmq_user
RABBITMQ_PASSWORD=rabbitmq_pass
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=solr.sync.v1
RABBITMQ_PREFETCH=10

# Solr Updater (connect to Docker)
SOLR_UPDATER_BASE_URL=http://localhost:8081
SOLR_UPDATER_TIMEOUT=30000

# Retry Configuration
RETRY_LIMIT=5
RABBITMQ_RETRY_EXCHANGE=solr.sync.retry

# Node Environment
NODE_ENV=development
